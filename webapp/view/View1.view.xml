<mvc:View controllerName="mentororia.fiori.ka.zkaui5242bf.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <headerContent>
            <Button text="Cadastrar dependentes" type="Success" icon="sap-icon://person-placeholder" press="onOpenDialog"/>
        </headerContent>
        <content>
            <form:SimpleForm editable="true" layout="ResponsiveGridLayout" id="form0">
                <form:content>
                    <core:Title text="Dados do usuário" id="title0"/>
                    <Label text="Nome" />
                    <TextArea value="{/name}" width="100%" />

                    <Label text="Usar Sobrenome"/>
                    <Switch state="{/showSecondName}" customTextOn="Sim" customTextOff="Não"/>

                    <Label text="Sobrenome" visible="{/showSecondName}"/>
                    <Input width="100%" visible="{/showSecondName}"/>

                    <Label text="E-mail" id="label1"/>
                    <Input width="100%" id="input2"/>
                </form:content>
            </form:SimpleForm>
        </content>
    </Page>
</mvc:View>
